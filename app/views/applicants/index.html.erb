<div class="row">
  <div class="col-sm-12">
    <h2>Applicants</h2>
  </div>
</div>

<table class="table table-striped applicants">
  <thead>
    <tr>
      <td>Name</td>
      <td>Email</td>
      <td>DoB</td>
      <td>State</td>
      <td>Medicaid Number</td>
      <td>SS Number</td>
    </tr>
  </thead>
  <tbody>
    <% @applicants.each do |applicant| %>
      <tr>
        <td><%= link_to applicant.name, edit_applicant_path(applicant) %></td>
        <td><%= applicant.email %></td>
        <td><%= applicant.dob %></td>
        <td><%= applicant.state %></td>
        <td><%= applicant.medicaid_number %></td>
        <td><%= applicant.ss_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Sign up unlisted Patient", new_applicant_path(unlisted_applicant: true), class: "btn btn-primary" %>

<script type="text/javascript">
  $('.applicants').DataTable();
</script>
